include ../templates/header
include ../templates/navbar

.container.mt-5
    .row
        .col-1
        .col-10
            .row.mb-5
                .card(style="width:100%;").mb-5
                    .card-header 
                        <span style="font-size: 32px;">#{carta.nino.nombreCompleto}</span> #{carta.nino.poblacion} (#{carta.nino.pais})
                        button
                            span buenas
                            i.bi.bi-check
                    .card-body
                        span <b>Comportamiento:</b> #{carta.nino.comportamiento}
                        br
                        span <b>Edad:</b> #{carta.nino.edad}
                        br
                        span <b>Page:</b> #{carta.paje.nombre} #{carta.paje.apellidos}
                        br
                        br
                        span <b>Juguetes:</b>
                        ul 
                            for val in carta.peticiones 
                                li=val.nombre

        .col-1
          
include ../templates/footer